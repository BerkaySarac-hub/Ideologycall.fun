<h2 id="result"></h2>
<form action="/user/register" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="nickname">Nickname</label>
        <input type="text" name="nickname" class="form-control" id="nickname" placeholder="Enter your nickname">
    </div>

    <div class="form-group">
        <label for="ideology">Ideology</label>
        <select name="ideology" class="form-control" id="ideology">
            <option value="liberal">Liberal</option>
            <option value="conservative">Conservative</option>
            <option value="progressive">Progressive</option>
            <option value="moderate">Moderate</option>
            <option value="Marksism">Marksism</option>
            <option value="Militarism">Militarism</option>
        </select>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password">
        <input type="password" name="Repeatpassword" class="form-control" id="Repeatpassword"
            placeholder="Repeat your password">
    </div>
    <label for="buffer">Profile Picture :</label>
    <input type="file" name="profilePicture" id="ProfilePictureInput">
    <button type="submit" class="btn btn-primary">Register</button>
</form>
<script>
    const form = document.getElementById("register-form");
    const password = document.getElementById("password");
    const repeatPassword = document.getElementById("Repeatpassword");
    const result = document.getElementById("result");

    form.addEventListener("submit", (event) => {
        event.preventDefault();

        if (password.value !== repeatPassword.value) {
            result.innerText = "Passwords do not match.";
        } else {
            form.submit();
        }
    });
</script>